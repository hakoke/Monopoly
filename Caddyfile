{
	auto_https off
	admin off
}

:{$PORT:3000} {
	root * /app/docs
	encode gzip
	
	# Log all requests for debugging
	log {
		output stdout
		format console
		level INFO
	}
	
	# Serve static files directly
	@staticFiles {
		path_regexp \.(html|css|js|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|mp3|mp4|webm|pdf)$
	}
	handle @staticFiles {
		file_server
	}
	
	# For all other requests (SPA routes), serve index.html
	handle {
		rewrite * /index.html
		file_server
	}
}

